<section id="login-page">

    <div class="loginSection">
        <div class="info">
            <h2>"My mama always said life was like a box of chocolates. You never know what you're gonna get."</h2>
        </div>
        <form method="post" class="loginForm">
            <h2>Login</h2>

            {{#if errorMessage}}
            <div class="error" >
                <p>{{errorMessage}}</p>                                 
            </div>
            {{/if}} 

            <ul class="noBullet">
                <li>
                    <label for="email">Email:</label>
                    <input type="text" class="inputFields" id="email" name="email" {{#if errorMessage}} value="{{inputData.email}}" {{/if}} />
                </li>
                <li>
                    <label for="password">Password:</label>
                    <input type="password" class="inputFields" id="password" name="password" />
                </li>

                <li id="center-btn">
                    <button id="login-btn">Login</button>
                </li>
            </ul>
        </form>
    </div>

</section>
