<section class="details-hero">
    <div class="wrap">
        <h2>Sneakers Details</h2>
    </div>
</section>

<section class="details-content">
    <div class="wrap">
        <div class="sneakers-details">
            <div class="sneakers-image">
                <img src="{{sneaker.image}}" alt="shoe">
            </div>
            <div class="sneakers-info">
                <h3>Brand: {{sneaker.brand}}</h3>
                <p><strong>Model:</strong> {{sneaker.model}}</p>
                <p><strong>Price:</strong> {{sneaker.price}}</p>
                <p><strong>Size:</strong> {{sneaker.size}}</p>
                <p><strong>Condition:</strong> {{sneaker.condition}}</p>
                <p><strong>Model Year:</strong> {{sneaker.year}}</p>
                <p><strong>Description:</strong> {{sneaker.description}}</p>
            </div>
            
        </div>

        {{#if hasUser}}
            <div class="buttons-wrap">
                {{#if isOwner}}
                <button class="btn edit"><a href="/edit/{{sneaker._id}}">Edit</a></button>
                <button class="btn delete"><a href="/delete/{{sneaker._id}}">Delete</a></button>
                {{else}}
                    {{#if isPreferred}}
                        <p class="prefer-message">You've already preferred this sneakers!</p>
                    {{else}}
                        <button class="btn prefer"><a href="/prefer/{{sneaker._id}}">Prefer</a></button>
                        {{/if}}
                    {{/if}}
            </div>
        {{/if}}
    </div>
</section>

    