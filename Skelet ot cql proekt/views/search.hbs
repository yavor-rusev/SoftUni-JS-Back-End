<main class="search">
    <!-- Search Page (Only for logged-in users) -->
    <section id="search">
        <h2>Search by Name</h2>

        <form class="search-wrapper cf" method="get" name ='search-form '> <!-- form with no name atributte may cause problem in Firefox -->
            <input id="#search-input" type="text" name="name" placeholder="Search here..." {{#if search.name}}value="{{search.name}}"{{/if}} />
            <input id="#search-input" type="text" name="category" placeholder="Search here..." {{#if search.category}}value="{{search.category}}"{{/if}} />
            <select autocomplete="off" id="#search-select" type="text" name="location" >
                <option value="---" hidden="hidden" >---</option>
                <option value="Sofia">Sofia</option>
                <option value="Colombia">Colombia</option>
            </select>            
            <button type="submit">Search</button>
        </form>

        <div id="search-container">
            {{#if stones}}  
                <ul class="card-wrapper">
                    <!-- Display a li with information about every post (if any)-->
                    {{#each stones}}                
                        {{> card}}
                    {{/each}}
                </ul>
            {{else}}
                <!-- Display an h2 if there are no posts -->
                <div id="no-post">
                    <h2>There are no results found.</h2>
                </div>        
            {{/if}}            
        </div>
    </section>
</main>

        